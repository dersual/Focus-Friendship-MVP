rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own sessions, goals, and pets.
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /goals/{goalId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /pets/{petId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // The shop collection has special rules.
      // We will handle this later if needed.
      // For now, let's keep it restricted.
      match /shop/{shopId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
